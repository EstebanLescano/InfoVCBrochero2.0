<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/ivLugares"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:background="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/cuadroImage" />

    <TextView
        android:id="@+id/tvLugaresNombres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Nombre"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivLugares"/>

    <TextView
        android:id="@+id/tvLugaresDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivLugares"
        app:layout_constraintTop_toBottomOf="@+id/tvLugaresNombres"
        tools:text="descripcion" />

    <TextView
        android:id="@+id/tvLugaresServicios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        tools:text="Servicios"
        app:layout_constraintTop_toBottomOf="@+id/tvLugaresDescripcion"
        app:layout_constraintStart_toEndOf="@+id/ivLugares"/>

</androidx.constraintlayout.widget.ConstraintLayout>